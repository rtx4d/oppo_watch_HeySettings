<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@id/choose_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/l_desription" android:textColor="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginTop="@dimen/dp_10" android:text="@string/heytap_load_font_lib_choose_tips" />
            <LinearLayout android:id="@id/update_confirm_item" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginTop="@dimen/dp_24">
                <ImageView android:layout_width="@dimen/dp_44" android:layout_height="@dimen/dp_44" android:src="@drawable/heytap_confirm" />
                <TextView android:textSize="@dimen/l_desription" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/dp_44" android:layout_marginLeft="@dimen/dp_10" android:text="@string/heytap_load_font_lib_confirm" />
            </LinearLayout>
            <LinearLayout android:id="@id/update_later_item" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginTop="@dimen/dp_20" android:layout_marginBottom="@dimen/dp_10">
                <ImageView android:layout_width="@dimen/dp_44" android:layout_height="@dimen/dp_44" android:src="@drawable/heytap_upload_font_cancel" />
                <TextView android:textSize="@dimen/l_desription" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/dp_44" android:layout_marginLeft="@dimen/dp_10" android:text="@string/heytap_load_font_lib_wait" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@id/power_pool_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/l_desription" android:textColor="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginTop="@dimen/dp_44" android:text="@string/heytap_load_font_lib_power_pool_tips" />
        <LinearLayout android:id="@id/power_pool_item" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_44">
            <ImageView android:layout_width="@dimen/dp_44" android:layout_height="@dimen/dp_44" android:src="@drawable/heytap_confirm" />
            <TextView android:textSize="@dimen/l_desription" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/dp_44" android:layout_marginLeft="@dimen/dp_10" android:text="@string/heytap_load_font_lib_power_pool_confirm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>